def dict_from_env_file(fpath):
    """ read file fpath with each line KEY=VAL into {'KEY': 'VAL'} """

    D = {}
    try:
        import re
        f = open(fpath, 'rt')
        for line in f.readlines():
            line = line.strip()
            m = re.match(r'(^\s*[^#=]+)=(.+)', line)
            if m:
                key, val = m.groups()
                D.update({key: val.strip('\'"')})
    except FileNotFoundError:
        pass
    finally:
        f.close()

    return D
